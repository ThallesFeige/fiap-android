<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10sp">
        <!--android:background="@android:color/holo_green_dark">&ndash;&gt;-->

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aplicativos"
                android:textSize="30sp"
                android:layout_margin="10sp"
                android:gravity="center"
        />
        <RadioGroup
                android:id="@+id/mercadoLivre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">

            <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/download"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mercado Livre"
                    android:textSize="25sp"
                    android:layout_marginTop="15sp"
                    android:layout_gravity="center"
            />
        </RadioGroup>
        <!--    MERCADO LIVRE   -->

        <RadioGroup
                android:id="@+id/aliex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="50sp"
                android:layout_gravity="center">

            <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/images"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AliExpress"
                    android:textSize="25sp"
                    android:layout_marginTop="15sp"
                    android:layout_gravity="center"

            />
        </RadioGroup>
        <!--    ALIEXPRESS   -->
        <RadioGroup
                android:id="@+id/carrefour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="50sp"
                android:layout_gravity="center">


            <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/carrefour"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrefour"
                    android:textSize="25sp"
                    android:layout_marginTop="15sp"
                    android:layout_gravity="center"/>
        </RadioGroup>
        <!--    CARREFOUR   -->

        <RadioGroup
                android:id="@+id/lulu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="50sp">


            <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/lulu"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Magazine Luiza"
                    android:textSize="25sp"
                    android:layout_marginTop="15sp"
                    android:layout_gravity="center"/>
        </RadioGroup>
        <!--    MAGALU   -->

        <RadioGroup
                android:id="@+id/amazon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="50sp">

            <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/amazon"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amazon"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"/>
        </RadioGroup>

        <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:text="Resultado"
                android:textColor="@android:color/background_dark"
                android:textSize="40sp"
                android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>